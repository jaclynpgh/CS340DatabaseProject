<body>
    <h1>Update {{student.firstName}} {{student.lastName}}</h1>
    <form id="update_student" action="/add_students_form" method="POST">
        <!--update student-->
        <fieldset>
            <legend>Update Student</legend>
            <label for="firstName">First Name:</label>
            <input type="text" name="firstName" id="firstName" size="30" maxlength="255" value="{{student.firstName}}">&nbsp;
            <label for="lastName">Last Name:</label>
            <input type="text" name="lastName" id="lastName" size="30" maxlength="255" value="{{student.lastName}}">
            <br>
            <br>
            <label for="dateOfBirth">Birthdate:</label>
            <input type="date" name="dateOfBirth" id="Last" size="20" value="2013-01-08">&nbsp;
            <label for="gender">Gender:</label>
            <select name="gender" id="gender">
                <option value="{{student.gender}}">{{student.gender}}</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Non-binary">Non-binary</option>
                </select>
            <br>
            <br>
            <label for="streetAddressLine1">Address:</label>
